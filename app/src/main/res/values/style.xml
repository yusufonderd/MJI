<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="HomeMtItemTitleStyle">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="HomeMtItemSubTitleStyle">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/secondaryTextColor</item>
  </style>

  <style name="HomeTitleStyle">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="LoginTitleTextStyle">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:text">@string/sign_in_to_mji</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="LoginContinueButtonStyle">
    <item name="android:background">@drawable/bg_rectangle_sign_in_btn</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:text">@string/login_continue</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ViewHeaderTitleStyle">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ShapeAppearanceOverlay.App.CornerSizePercent" parent="">
    <item name="cornerSize">3%</item>
  </style>

  <style name="HomeDetailTitleStyle">
    <item name="android:textSize">32sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="HomeDetailSubTitleStyle">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="HomeDetailDateTitleStyle">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/secondaryTextColor</item>
  </style>

</resources>